/* Body styling to center the content and apply a background gradient */
body {
    font-family: 'Arial', sans-serif; /* Font for the whole page */
    background: linear-gradient(45deg, teal, white); /* Diagonal gradient background */
    height: 100vh; /* Full viewport height */
    display: flex; /* Use flexbox for layout */
    align-items: center; /* Center items vertically */
    justify-content: center; /* Center items horizontally */
    text-align: center; /* Center text alignment */
}

/* Container for the entire trivia game */
.container {
    background: white; /* White background for contrast */
    border-radius: 10px; /* Rounded corners */
    width: 90%; /* Responsive width */
    max-width: 600px; /* Max width for large screens */
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2); /* Soft shadow */
    padding: 12px; /* Padding inside container */
}

/* Button styling for choices */
button {
    padding: 10px 20px; /* Inner spacing */
    background-color: slategray; /* Default background color */
    color: white; /* White text */
    border: none; /* No border */
    border-radius: 5px; /* Slightly rounded corners */
    cursor: pointer; /* Pointer cursor on hover */
    margin: 10px; /* Spacing between buttons */
    transition: background-color 0.3s, transform 0.3s; /* Smooth hover effect */
}

/* Button hover effect */
button:hover {
    background-color: teal; /* Change background color on hover */
    transform: scale(1.05); /* Slight zoom on hover */
}

/* Result text styling */
#result {
    margin-top: 20px; /* Space above result */
    font-weight: bold; /* Make text bold */
    font-size: 1.3rem; /* Larger font size */
    color: teal; /* Teal color to match theme */
}